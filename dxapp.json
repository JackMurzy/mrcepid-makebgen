{
  "name": "mrcepid-makebgen",
  "title": "MakeBGEN",
  "summary": "Makes a sorted BGEN file from a list of vcfs",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "chromosome",
      "label": "chromosome to merge",
      "class": "string",
      "optional": false,
      "help": "chromosome to merge"
    },
    {
      "name": "coordinate_file",
      "label": "list of bcf files to merge into bgen",
      "class": "file",
      "optional": true,
      "help": "formatted list of bcf files to merge into bgen. See README for format.",
      "default": {
        "$dnanexus_link": {
          "project": "project-G6BJF50JJv8p4PjGB9yy7YQ2",
          "id": "file-G7x5910JJv8XZkq44949xbJq"
        }
      }
    }
  ],
  "outputSpec": [
    {
      "name": "bgen",
      "label": "Output bgen",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bgen"
      ],
      "help": "Output bgen"
    },
    {
      "name": "index",
      "label": "Output bgen index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bgen.bgi"
      ],
      "help": "Output bgen index"
    },
    {
      "name": "sample",
      "label": "Output bgen.sample",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.sample"
      ],
      "help": "Output bgen sample file"
    },
    {
      "name": "vep",
      "label": "Output vep annotations",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": "Output vep annotations"
    },
    {
      "name": "vep_idx",
      "label": "Output vep annotations index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz.tbi"
      ],
      "help": "Output vep annotations index"
    }
  ],
  "access": {
    "network": [
      "*"
    ]
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "src/mrcepid-makebgen.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": [
      {"name": "pandas",
      "package_manager": "pip"}]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x16"
        }
      }
    }
  }
}
