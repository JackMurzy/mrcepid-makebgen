{
  "name": "mrcepid-makebgen",
  "title": "MakeBGEN",
  "summary": "Makes a sorted BGEN file from a list of vcfs",
  "dxapi": "1.0.0",
  "version": "1.1.1",
  "inputSpec": [
    {
      "name": "output_prefix",
      "label": "Output prefix",
      "class": "string",
      "optional": false,
      "help": "Only affects output name of bgen / bcf. File list must contain only files to merge."
    },
    {
      "name": "coordinate_file",
      "label": "list of bcf files to merge into bgen",
      "class": "file",
      "optional": false,
      "help": "Formatted list of bcf files to merge into bgen. See README for format."
    },
    {
      "name": "make_bcf",
      "label": "Make concatenated BCF in addition to bgen?",
      "class": "boolean",
      "default": false,
      "help": "Make a concatenated BCF in addition to bgen. WARNING: This can lead to very long runtimes if enabled and is intended for testing only."
    },
        {
      "name": "concatenate_bgens",
      "label": "Make large BGEN that is concatenated from multiple BGENs?",
      "class": "boolean",
      "default": false,
      "help": "Make a concatenated BGEN from multiple BGENs."
    },
        {
      "name": "size_of_bgen",
      "label": "How many BGEN files to concatenate?",
      "class": "boolean",
      "default": 3,
      "help": "How many BGEN files to concatenate? This is only used if concatenate_bgens is set to true. The default is 3, which means that the first 3 BGEN files will be concatenated into a single BGEN file."
    }
  ],
  "outputSpec": [
    {
      "name": "bgen",
      "label": "Output bgen",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bgen"
      ],
      "help": "Output bgen"
    },
    {
      "name": "index",
      "label": "Output bgen index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bgen.bgi"
      ],
      "help": "Output bgen index"
    },
    {
      "name": "sample",
      "label": "Output bgen.sample",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.sample"
      ],
      "help": "Output bgen sample file"
    },
    {
      "name": "vep",
      "label": "Output vep annotations",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz"
      ],
      "help": "Output vep annotations"
    },
    {
      "name": "vep_idx",
      "label": "Output vep annotations index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv.gz.tbi"
      ],
      "help": "Output vep annotations index"
    },
    {
      "name": "bcf",
      "label": "Output bcf (if requested)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.bcf"
      ]
    },
    {
      "name": "bcf_idx",
      "label": "Output bcf index (if requested)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.bcf.csi"
      ]
    }
  ],
  "access": {
    "network": [
      "*"
    ]
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "makebgen/makebgen.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": [
      {
        "name": "uv",
        "package_manager": "pip"
      },
      {
        "name": "makebgen",
        "package_manager": "git",
        "url": "https://github.com/mrcepid-rap/mrcepid-makebgen.git",
        "tag": "feature/HG-493-write-a-script-which-generates-input-chunks-for-makebgen",
        "build_commands": "uv pip install --system ."
      }
    ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x16"
        }
      }
    }
  }
}
